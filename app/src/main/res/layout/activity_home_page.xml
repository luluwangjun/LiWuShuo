<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.lulu.administrator.liwushuohomework.ui.HomePageActivity">
    <android.support.design.widget.TabLayout
        android:id="@+id/main_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorColor="@color/colorPrimary"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/main_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_menu_rg"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:layout_above="@id/main_menu_rg"/>
    <RadioGroup
        android:id="@id/main_menu_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/main_menu_item_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:checked="true"
            android:drawableLeft="@drawable/home_page_selector"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/main_menu_item_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/list_selector"
            android:gravity="center"
            android:padding="5dp"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/main_menu_item_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:drawableLeft="@drawable/classify_selector"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/main_menu_item_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:drawableLeft="@drawable/message_selector"
            android:button="@null"/>
    </RadioGroup>
</RelativeLayout>
